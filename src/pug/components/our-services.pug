mixin our-services(obj)
  .our-services&attributes(attributes)
    .container.container-sm
      img.our-services__letter(src="images/sc_header_s.png" alt="letter s." width="400" height="444" data-scrollspy="animate__fadeInDown")
      img.our-services__sun(src="images/sun-wide.png" alt="sun." width="878" height="409" data-scrollspy="animate__fadeInUp")
      .our-services__header.section-title
        h2 our services
      h2.our-services__title
        | Local expertise.
        | Global impact.
      p.our-services__desc
        | With local presence in over 40 African countries, we ensure fast, transparent, <br>
        | and effective debt recovery services. Trust us to deliver results where it matters most.
      .out-services__slider-block
        .swiper.our-services__slider
          .swiper-wrapper 
            each item in obj.slides
              .swiper-slide
                a.our-services__swiper-slide(href=item.href ? item.href : "#" ) !{item.text}
        .swiper-pagination
          .mask.mask-left
            button.swiper-button-prev
              +svg('arrow-left-rounded')
          .mask.mask-right
            button.swiper-button-next
              +svg('arrow-right-rounded')
      a.button(href=obj.button.href ? obj.button.href : "#"  )
            span !{obj.button.text}
            +svg('arrow-right').button__icon
