extends pug/base

prepend vars
  - title = 'About us'

block content
  +page-header({
    title: `About Soundclaims`,
    desc: "Soundclaims is your trusted partner for debt recovery and claims management across Africa. With deep local knowledge and global expertise, we help international credit insurers, export credit agencies, and financial institutions succeed in even the most complex markets."
  }).decor.decor--page-header.content-blocks-margin 
  +here-to-help
  .container.container-sm
    +videoFile
  +block-news({
    title: 'Facts & Figures',
    hideLinkNews: true,
    list: [
      {
        boldTitle: '39',
        title: 'Countries',
        text: 'Local Soundclaims teams operate across 39 countries in Africa, supported by over 70 colleagues on the ground.'
      },
      {
        boldTitle: 'Head office',
        title: 'Netherlands',
        text: 'Our head office in the Netherlands has a dedicated team of 15 professionals.'
      },
      {
        boldTitle: '71%',
        title: 'Short-term export claims (trade credit)'
      }
    ]
  }).block-news--fact-figures
  +contact-us({
    subtitle: 'Let’s talk solutions.',
    text: 'Interested in learning more about us? Reach out today — we would love to connect!',
    bgImg: 'images/contact4.jpeg'
  }).contact-us--about